		<record id="hr_rule_HS_130" model="hr.salary.rule">
            <field name="name">Heures supplémentaires 30%</field>
            <field name="sequence" eval="2"/>
            <field name="code">HS130</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
